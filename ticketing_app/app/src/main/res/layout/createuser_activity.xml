<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.ecam.a13375.appmobile.Principal"
    android:weightSum="1">

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@+id/space"
    android:layout_toEndOf="@+id/space"
    android:layout_marginTop="25dp"
        android:layout_weight="0.25">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <TextView
            android:text="Nom:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Votre nom"
            android:layout_weight="1.68" />
    </LinearLayout>

    <Space
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <TextView
            android:text="Prénom:"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" />

        <EditText
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Votre prénom"
            android:ems="10"
            android:id="@+id/editText12"
            android:layout_weight="1.91" />


    </LinearLayout>
</LinearLayout>

    <TextView
        android:text="Age:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text|number"
        android:text="Votre âge" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:text="Votre adresse"
        android:ems="10"
        android:id="@+id/editText14" />

    <TextView
        android:text="Mail:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView18" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:text="Votre mail"
        android:ems="10"
        android:id="@+id/editText15" />

    <TextView
        android:text="Username:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView19" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nom d'utilisateur"
        android:ems="10"
        android:id="@+id/editText16" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="175dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Password:"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView20" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="147dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:text="Confirmer Password:" />

            <EditText
                android:layout_width="201dp"
                android:layout_height="57dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editText18" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="Création du compte"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:id="@+id/button10" />
</LinearLayout>
